<%- include('../partials/header') %>
<div class="container mt-5">
  <h2>Hierros</h2>
  <a href="/admin/irons/new" class="btn btn-success mb-3">Nuevo Hierro</a>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th><th>Imagen</th><th>Descripción</th><th>Usuario</th><th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% irons.forEach(iron => { %>
        <tr>
          <td><%= iron.id %></td>
          <td><img src="<%= iron.symbolImageUrl %>" alt="Hierro" style="max-width:60px;max-height:60px;"></td>
          <td><%= iron.description %></td>
          <td><%= iron.user ? iron.user.username : '' %></td>
          <td>
            <a href="/admin/irons/edit/<%= iron.id %>" class="btn btn-warning btn-sm">Editar</a>
            <form action="/admin/irons/delete/<%= iron.id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar hierro?')">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
