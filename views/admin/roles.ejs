        <tr>
          <td><%= role.id %></td>
          <td><%= role.name %></td>
          <td>
            <a href="/admin/roles/edit/<%= role.id %>" class="btn btn-warning btn-sm">Editar</a>
            <form action="/admin/roles/delete/<%= role.id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm" onclick="return confirm('Â¿Eliminar rol?')">Eliminar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
