<%- include('../partials/header') %>
<div class="container mt-5">
  <h2><%= role ? 'Editar Rol' : 'Nuevo Rol' %></h2>
  <form method="POST" action="<%= role ? ('/admin/roles/edit/' + role.id) : '/admin/roles/new' %>">
    <div class="mb-3">
      <label for="name" class="form-label">Nombre del Rol</label>
      <input type="text" class="form-control" id="name" name="name" required value="<%= role ? role.name : '' %>">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/admin/roles" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
<%- include('../partials/footer') %>
