<%- include('../partials/header', { title: title }) %>
<div class="container mt-4">
  <h1><%= title %></h1>
  <a href="/ganadero/hierros/nuevo" class="btn btn-success mb-3">Registrar Nuevo Hierro</a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Imagen</th>
        <th>Descripci√≥n</th>
        <th>Estado</th>
        <th>Fecha de Registro</th>
      </tr>
    </thead>
    <tbody>
      <% if (irons.length === 0) { %>
        <tr><td colspan="3">No tienes hierros registrados.</td></tr>
      <% } %>
      <% irons.forEach(iron => { %>
        <tr>
          <td><img src="<%= iron.symbolImageUrl %>" alt="Hierro" width="80"></td>
          <td><%= iron.description || '' %></td>
          <td><%= iron.state ? iron.state.name : '' %></td>
          <td><%= new Date(iron.createdAt).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
