<%- include('../partials/header', { title: title }) %>
<div class="container mt-4">
  <h1><%= title %></h1>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <form action="/ganadero/hierros/crear" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="symbolImage" class="form-label">Imagen del Hierro <span class="text-danger">*</span></label>
      <input type="file" name="symbolImage" id="symbolImage" class="form-control" accept="image/*" required>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Descripci√≥n</label>
      <textarea name="description" id="description" class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3">
      <label for="stateId" class="form-label">Estado <span class="text-danger">*</span></label>
      <select name="stateId" id="stateId" class="form-select" required>
        <option value="">Seleccione un estado</option>
        <% states.forEach(state => { %>
          <option value="<%= state.id %>"><%= state.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label for="municipio" class="form-label">Municipio <span class="text-danger">*</span></label>
      <input type="text" name="municipio" id="municipio" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="type" class="form-label">Tipo<span class="text-danger">*</span></label>
      <select name="type" id="type" class="form-select" required>
        <option value="natural">Natural</option>
        <option value="juridico">Juridico</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Registrar Hierro</button>
    <a href="/ganadero/hierros" class="btn btn-secondary">Cancelar</a>
  </form>
</div>
<%- include('../partials/footer') %>
